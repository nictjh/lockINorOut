generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Article {
  id        Int      @id @default(autoincrement())
  title     String
  url       String   @unique
  snippet   String?
  category  String?
  topic     String
  source    String?
  createdAt DateTime @default(now())
}

model SummarizedArticle {
  id        String   @id @default(cuid())
  title     String
  summary   String   @db.Text
  source    String?
  url       String?  @unique
  timestamp DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
